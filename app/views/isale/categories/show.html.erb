<% content_for :tools do %>
    <%= render 'tools' %>
    <div class="btn-group mr-2">
        <%= link_icon 'tags', t('Add_tags'), new_category_tag_path(category_id: params[:id])  %>
        <%= link_icon('edit', t('Edit'), edit_category_path(@category)) %>
    </div>
<% end %>

<% content_for :notice do %>
    <p><%= notice %></p>
<% end %>

<h3>
    <%= Isale::Tag.model_name.human %> :
    <%= render partial: 'isale/tags/tag', collection: @category.tags, locals: {category_id: params[:id]} %>
</h3>
